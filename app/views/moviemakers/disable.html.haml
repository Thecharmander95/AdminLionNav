.grid-x
  .medium-3.cell
    = render "buttons/moviemakers"
  .medium-9.cell
    .center
      %h2 Disable Settings
      %h4 Control what features you can disable
    = form_for @disable do |f|
      .grid-x
        .medium-3.cell.space
          %p
            = f.label :Disable_Movies
            = f.select :movie, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_scenes
            = f.select :scene, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_credits
            = f.select :credit, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_picturescenes
            = f.select :picturescene, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_Movie_Makers
            = f.select :moviemaker, [['No', false], ['Yes', true]]
      = f.submit class: "button"
    = link_to "Back", moviemakers_path, class: "button"