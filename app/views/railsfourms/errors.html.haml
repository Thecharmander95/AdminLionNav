.grid-x
  .medium-3.cell
    = render "buttons/railstutorials"
  .medium-9.cell
    .center
      %h2 Errors 
      %h4 See errors that are related to Lion Fianace
    %table
      %thead
        %tr
          %th Id
          %th Error
          %th Discribtion
          %th Resolved?
          %th Update
      %tbody
        - @error.each do |error|
          - if error.site == "forums"
            %tr
              %td= error.id
              %td= error.error
              %td= error.description
              %td= error.resolved
              %td= link_to "Mark Resolved", resolved_path(:updatecall => error.id)
    
    = link_to "Back", rortutorials_path, class: "button"