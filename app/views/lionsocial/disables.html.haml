.grid-x
  .medium-3.cell
    = render "buttons/lionsocial"
  .medium-9.cell
    .center
      %h2 Disable Settings
      %h4 Control what features you can disable
    = form_for @disable do |f|
      .grid-x
        .medium-3.cell.space
          %p
            = f.label :Disable_Posts
            = f.select :postdisable, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_conversations
            = f.select :conversationdisable, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_Abouts
            = f.select :lsabout, [['No', false], ['Yes', true]]
        .medium-3.cell.space
          %p
            = f.label :Disable_Lion_Social
            = f.select :lionsocial, [['No', false], ['Yes', true]]

      = f.submit "Update Disables", class: "button"
    = link_to "Back", lionsocial_path, class: "button"
